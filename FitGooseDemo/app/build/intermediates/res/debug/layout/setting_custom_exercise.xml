<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="2"
        android:layout_marginLeft="70dp"
        android:inputType="textCapWords"
        android:id="@+id/custom_exercise_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:text="Unit 1:"
        android:layout_weight="1"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="41dp"
        android:layout_weight="2"
        android:id="@+id/custom_unit_one" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="145dp"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Unit 2:"
        android:layout_weight="1"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="41dp"
        android:layout_weight="2"
        android:id="@+id/custom_unit_two" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Shoulder"
            android:id="@+id/checkBox_shoulder" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Chest"
            android:id="@+id/checkBox_chest" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:text="Upper arm"
            android:id="@+id/checkBox_uarm" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:text="Forearm"
            android:id="@+id/checkBox_farm" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:text="Abs"
            android:id="@+id/checkBox_abs" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            android:text="Quads"
            android:id="@+id/checkBox_quads" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:text="Calves"
            android:id="@+id/checkBox_calves" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:text="back"
            android:id="@+id/checkBox_back" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:text="Cardio"
            android:id="@+id/checkBox_cardio" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:text="Two units?"
            android:id="@+id/checkBox_secondUnit" />

    </RelativeLayout>

    <Button
        android:id="@+id/setting_add_exercise_done"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Done" />

    <Button
        android:id="@+id/setting_add_exercise_cancel"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="260dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Cancel"/>




</RelativeLayout><!-- From: file:/Users/guest/Documents/cs446/project/FitGooseDemo/app/src/main/res/layout/setting_custom_exercise.xml -->